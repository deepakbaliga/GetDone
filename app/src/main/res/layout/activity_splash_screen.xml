<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deepakbaliga.getdone.activities.SplashScreen">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/title_textview"
        android:src="@drawable/getdone_logo"
        android:layout_centerHorizontal="true"/>


    <com.deepakbaliga.getdone.customViews.ThinTextView
        android:id="@+id/title_textview"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#777"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" />

    <com.deepakbaliga.getdone.customViews.RegularTextView
        android:id="@+id/sub_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_sub_title"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="#777"
        android:layout_below="@+id/title_textview"/>

</RelativeLayout>
