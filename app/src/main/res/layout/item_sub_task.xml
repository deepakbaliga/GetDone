<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <com.deepakbaliga.getdone.customViews.CircularImageView
            android:id="@+id/dot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/ripple_fab"
            android:tint="@color/asbestos"
            android:layout_margin="16dp"
            android:layout_centerVertical="true"/>

    <com.deepakbaliga.getdone.customViews.ThinTextView
        android:id="@+id/sub_task_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="24dp"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/dot" />

</RelativeLayout>